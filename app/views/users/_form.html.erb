<div class="container">
  <div class="row justify-content-center">
    <div class = "col-10">
      <%= render 'shared/errors', obj: @user%>
          <%= form_with(model: @user, class: "shadow p-3 mt-5 mb-5 bg-light rounded", local: true) do |f| %>
            <div class="form-group row">
              <%= f.label :username, class: "col-2 col-form-label text-dark" %>
              <div class="col-10">
                <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
              </div>
            </div>
                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10"> 
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10"> 
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                </div>
            </div>
            <div class="form-group row justify-content-center mt-3">
              <%= f.submit(@user.new_record? ? "Signup" : "Update Profile", class: "btn btn-outline-warning btn-lg") %>
            </div>
          <% end %>
        </div class="mb-3">
        <%= link_to '[ go back to articles listing ]', articles_path, class: "text-success" %>
      </div>
  </div>
</div>