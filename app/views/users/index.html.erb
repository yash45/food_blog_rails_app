<h1 class="text-center mt-4">Foodiez Members</h1>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<div class= "container" id="home-container">
  <h3><%= link_to 'Add a new Article', new_article_path%></h3>
  <% @users.each do |user| %>
      <div class ="row justify-content-md-center">  
          <div class = "col-8 mt-4" >  
              <div class="card text-center shadow mb-5 bg-body rounded">
                  <div class="card-header fst-italic">
                      <%= link_to user.username, user %>
                  </div>
                  <div class="card-body">
                      <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>       
                      <%= link_to "View Profile", user, class: "btn btn-outline-success" %>
                      <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-warning" %>
                  </div>
                  <div class="card-footer text-muted">
                      <small> Joined <%= time_ago_in_words(user.created_at)%></small>
                  </div>
              </div>
          </div>
      </div>
  <% end %>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
</div>
  </div>
</div>

