<div class="container">
  <div class="row justify-content-center">
    <div class = "col-10">
        <%= render 'shared/errors', obj: @article %>
        <%= form_with(model: @article, class: "shadow p-3 mt-5 mb-5 bg-light rounded", local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                </div>
            </div>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10"> 
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                </div>
            </div>
            <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-dark btn-lg" %>
            </div>
        <% end %>
        </div>
        </div>
        <div class="justify-content-center">
            <%= link_to 'go back to articles listing ]', articles_path, class: "text-success" %>
        </div>
    </div>
</div>